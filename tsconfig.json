{
    "compilerOptions": {
      "rootDir": "src",       // Ensure this points to your source directory
      "outDir": "dist",       // Ensure this is your output directory
      "lib": ["es2020"],
      "target": "es2020",
      "module": "esnext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "types": ["node"]
    },
    "include": ["src/**/*"],  // Include all TypeScript files in src
    "exclude": ["node_modules", "dist"] // Exclude node_modules and dist
  }
  